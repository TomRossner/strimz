{
    "name": "strimz",
    "version": "1.2.9",
    "main": "src/main.js",
    "description": "Strimz v1.2.9",
    "type": "module",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/TomRossner/strimz.git"
    },
    "author": {
        "email": "tomrossner2@gmail.com",
        "name": "Tom Rossner",
        "url": "https://www.tomrossner.dev/"
    },
    "scripts": {
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:electron\"",
        "dev:backend": "cd strimz-backend && npm run start",
        "dev:frontend": "cd strimz-client && npm run dev",
        "dev:electron": "wait-on http://localhost:5173 && electron . -- \"C:\\Users\\tomro\\Downloads\\No Hard Feelings (2023) [2160p] [WEBRip] [x265] [10bit] [5.1] [YTS.MX].torrent\"",
        "build:frontend": "cd strimz-client && rimraf dist && npm run build",
        "build:backend": "cd strimz-backend && rimraf dist && npm run build",
        "build:electron": "rimraf dist && npm run build:frontend && npm run build:backend && electron-builder",
        "dist": "npm run build:electron"
    },
    "build": {
        "asar": true,
        "asarUnpack": [
            "node_modules/next",
            "node_modules/@img",
            "node_modules/sharp",
            "**\\*.{node,dll}"
        ],
        "icon": "./src/assets/strimzicon.ico",
        "appId": "com.strimz.app",
        "productName": "Strimz",
        "directories": {
            "buildResources": "src/assets",
            "output": "dist"
        },
        "files": [
            "strimz-client/**/*",
            "strimz-backend/dist/**/*",
            "buildResources/**/*",
            "dist/**/*",
            "node_modules/dotenv/**/*",
            "package.json",
            "src/**/*",
            ".env"
        ],
        "extraResources": [
            {
                "from": "./strimz-backend/dist",
                "to": "backend"
            },
            {
                "from": "./strimz-backend/node_modules",
                "to": "backend/node_modules"
            },
            {
                "from": "node-bin/node.exe",
                "to": "node/node.exe"
            }
        ],
        "publish": [
            {
                "provider": "github",
                "owner": "TomRossner",
                "repo": "strimz"
            }
        ],
        "win": {
            "target": [
                "nsis"
            ]
        },
        "mac": {
            "target": "dmg"
        },
        "linux": {
            "target": [
                "deb",
                "AppImage"
            ]
        },
        "fileAssociations": [
            {
                "ext": "torrent",
                "name": "Torrent File",
                "role": "Viewer"
            }
        ]
    },
    "dependencies": {
        "chardet": "^2.1.0",
        "check-disk-space": "^3.4.0",
        "dotenv": "^16.5.0",
        "electron-log": "^5.3.3",
        "electron-store": "^10.0.1",
        "electron-updater": "^6.6.2",
        "iconv-lite": "^0.6.3",
        "proxycheck-ts": "^0.0.11",
        "update-electron-app": "^3.1.1"
    },
    "devDependencies": {
        "@types/react-world-flags": "^1.6.0",
        "concurrently": "^9.1.2",
        "electron": "^35.1.4",
        "electron-builder": "^24.13.3",
        "rimraf": "^6.0.1",
        "wait-on": "^8.0.3"
    }
}
