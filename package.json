{
    "name": "strimz",
    "version": "1.0.0",
    "main": "electron/main.js",
    "description": "Strimz v1.0.0",
    "author": {
        "email": "tomrossner2@gmail.com",
        "name": "Tom Rossner",
        "url": "https://www.tomrossner.dev/"
    },
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:electron\"",
        "dev:backend": "cd strimz-backend && npm run start",
        "dev:frontend": "cd strimz-client && npm run dev",
        "dev:electron": "wait-on http://localhost:5173 && electron electron/main.js",
        "build:frontend": "cd strimz-client && npm run build",
        "build:backend": "cd strimz-backend && npm run build",
        "build:electron": "npm run build:frontend && npm run build:backend && electron-builder",
        "build": "tsup"
    },
    "build": {
        "asar": true,
        "asarUnpack": [
            "node_modules/next",
            "node_modules/@img",
            "node_modules/sharp",
            "**\\*.{node,dll}"
        ],
        "icon": "./electron/assets/strimzicon.ico",
        "appId": "com.strimz.app",
        "productName": "Strimz",
        "directories": {
            "buildResources": "assets",
            "output": "dist"
        },
        "files": [
            "electron/**/*",
            "strimz-client/**/*",
            "strimz-backend/dist/**/*",
            "buildResources/**/*"
        ],
        "extraResources": [
            {
                "from": "./strimz-backend/dist",
                "to": "backend"
            }
        ],
        "publish": [
            {
                "provider": "github",
                "owner": "TomRossner",
                "repo": "strimz"
            }
        ],
        "win": {
            "target": [
                "nsis"
            ]
        },
        "mac": {
            "target": "dmg"
        },
        "linux": {
            "target": [
                "deb",
                "AppImage"
            ]
        }
    },
    "dependencies": {
        "electron-log": "^5.3.3",
        "electron-updater": "^6.1.1"
    },
    "devDependencies": {
        "concurrently": "^9.1.2",
        "electron": "^35.1.4",
        "electron-builder": "^24.12.0",
        "wait-on": "^8.0.3"
    }
}
