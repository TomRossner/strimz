{
    "name": "strimz",
    "version": "1.2.3",
    "main": "electron/main.js",
    "description": "Strimz v1.2.3",
    "type": "module",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/TomRossner/strimz.git"
    },
    "author": {
        "email": "tomrossner2@gmail.com",
        "name": "Tom Rossner",
        "url": "https://www.tomrossner.dev/"
    },
    "scripts": {
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:electron\"",
        "dev:backend": "cd strimz-backend && npm run start",
        "dev:frontend": "cd strimz-client && npm run dev",
        "dev:electron": "wait-on http://localhost:5173 && electron electron/main.js",
        "build:frontend": "cd strimz-client && npm run build",
        "build:backend": "cd strimz-backend && npm run build",
        "build:electron": "npm run build:frontend && npm run build:backend && electron-builder",
        "dist": "npm run build:electron"
    },
    "build": {
        "asar": true,
        "asarUnpack": [
            "node_modules/next",
            "node_modules/@img",
            "node_modules/sharp",
            "**\\*.{node,dll}"
        ],
        "icon": "./electron/assets/strimzicon.ico",
        "appId": "com.strimz.app",
        "productName": "Strimz",
        "directories": {
            "buildResources": "assets",
            "output": "dist"
        },
        "files": [
            "electron/**/*",
            "strimz-client/**/*",
            "strimz-backend/dist/**/*",
            "buildResources/**/*",
            "dist/**/*",
            "node_modules/dotenv/**/*",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "./strimz-backend/dist",
                "to": "backend"
            },
            {
                "from": "./strimz-backend/node_modules",
                "to": "backend/node_modules"
            },
            {
                "from": "node-bin/node.exe",
                "to": "node/node.exe"
            }
        ],
        "publish": [
            {
                "provider": "github",
                "owner": "TomRossner",
                "repo": "strimz"
            }
        ],
        "win": {
            "target": [
                "nsis"
            ]
        },
        "mac": {
            "target": "dmg"
        },
        "linux": {
            "target": [
                "deb",
                "AppImage"
            ]
        }
    },
    "dependencies": {
        "electron-log": "^5.3.3",
        "electron-store": "^10.0.1",
        "electron-updater": "^6.6.2",
        "update-electron-app": "^3.1.1"
    },
    "devDependencies": {
        "concurrently": "^9.1.2",
        "electron": "^35.1.4",
        "electron-builder": "^24.13.3",
        "wait-on": "^8.0.3"
    }
}
